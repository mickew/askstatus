@page "/admin/system/upload-files"
@attribute [Authorize(Permissions.System)]

<PageTitle>Askstatus - Upload files</PageTitle>
<MudStack>
    <MudFileUpload T="IBrowserFile" FilesChanged="UploadGoogleFile" Accept="gmail.com">
        <ActivatorContent>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.CloudUpload">
                Upload Google Token Response File
            </MudButton>
        </ActivatorContent>
    </MudFileUpload>

    <MudFileUpload T="IBrowserFile" FilesChanged="UploadAppSettingsFile" Accept="appsettings.Production.json">
        <ActivatorContent>
            <MudButton Variant="Variant.Filled"
                       Color="Color.Primary"
                       StartIcon="@Icons.Material.Filled.CloudUpload">
                Upload Production AppSettings File
            </MudButton>
        </ActivatorContent>
    </MudFileUpload>
</MudStack>