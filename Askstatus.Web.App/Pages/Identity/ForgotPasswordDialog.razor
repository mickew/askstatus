<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Security" Class="mr-3 mb-n1" />
            @MudDialog!.Title
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@ForgotPasswordRquest" @ref="@Form" Validation="@ForgotPasswordRquestValidator.ValidateValue" ValidationDelay="0">
            <MudFocusTrap DefaultFocus="DefaultFocus">
                <MudTextField InputType="InputType.Email" @bind-Value="@ForgotPasswordRquest.Email" Label="Email" For="@(() => ForgotPasswordRquest.Email)" />
            </MudFocusTrap>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Success" OnClick="Ok">Reset password</MudButton>
    </DialogActions>
</MudDialog>